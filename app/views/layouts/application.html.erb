    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <%= favicon_link_tag 'icon.png' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%# javascript_importmap_tags %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
